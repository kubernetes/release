#!/usr/bin/make -f
# -*- makefile -*-

#export DH_VERBOSE=1
CNI_RELEASE = 07a8a28637e97b22eb8dfe710eeae1344f69d16e

build:
	echo noop

binary:
	curl -sSL --fail --retry 5 \
		"https://dl.k8s.io/network-plugins/cni-{{ .Arch }}-$(CNI_RELEASE).tar.gz" \
		| tar xz
	dh_testroot
	dh_auto_install
	dh_shlibdeps
	dh_install
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

%:
	dh $@
